<% if flash[:notice] %>
<div class = "alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class=page-header>
  <div class="pull-right">
    <%= link_to 'Edit', edit_location_path(@location), class:"btn btn-info" %>
  </div>
  <h1>
  <%= @location.name %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @location.name %></dd>
  <dt>Address:</dt>
  <dd><%= @location.address %></dd>
  <dt>ZIP Code:</dt>
  <dd><%= @location.zipcode %></dd>
</dl>

<p><strong>Events at <%= @location.name %></strong></p>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Requires ID?</th>
    </tr>
  </thead>

  <tbody>
    <% @location.events.each do |event| %>
      <tr>
        <td><%= link_to event.description, location_event_path(@location, event) %></td>
        <td><%= event.date %></td>
        <td><%= event.requires_id %></td>
        <td class="text-right">
          <%= link_to 'Edit', edit_location_event_path(@location, event), class:"btn btn-info" %>
          <%= link_to 'Delete', location_event_path(@location, event), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
